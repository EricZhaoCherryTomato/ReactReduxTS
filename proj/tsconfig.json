{
  "compilerOptions": {
    "baseUrl": "./", // enables relative imports to root
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}